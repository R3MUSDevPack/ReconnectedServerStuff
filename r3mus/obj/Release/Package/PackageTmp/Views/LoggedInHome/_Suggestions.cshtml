@using (Html.BeginForm("SubmitSuggestion", "LoggedInHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <p style="font-family:Arial; font-size:small; font-weight:600">
        All suggestions or comments will be anonymous, &amp; will be reviewed by the senior corp officials only.
        <br /><br />
        @Html.TextArea("SuggestionText", new { style = "max-width:100%; width: 100%; height:200px;" })
    </p>
    <fieldset>
        <input type="submit" value="Submit Comment" class="btn btn-default" />
    </fieldset>
}
