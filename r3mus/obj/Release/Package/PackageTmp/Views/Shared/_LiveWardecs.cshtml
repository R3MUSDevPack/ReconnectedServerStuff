@model IEnumerable<r3mus.Models.Wardec>

@if (Model.Count() > 0)
{
    <div class="col-md-12 alert-danger" style="text-align:center;">
        <h3 style="color:red;">
            Live Wardecs
        </h3>
        <table class="table" style="color:red;">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Topic)
                    </td>
                </tr>
            }

        </table>
    </div>
}
else
{
    <div class="col-md-12 alert-success" style="text-align:center;">
        <h3 style="color:green;">No Wardecs</h3>
    </div>
}