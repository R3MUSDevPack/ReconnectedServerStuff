@model r3mus.Models.Fleet

@{
    ViewBag.Title = "Fleet Details";
}
<div class="row">
    <h3>@Html.DisplayFor(model => model.Name)</h3>
</div>
<div class="row">
    <div class="col-md-6">
        <h4>@Html.DisplayNameFor(model => model.Commander): @Html.DisplayFor(model => model.Commander)</h4>
    </div>
    <div class="col-md-6">
        <h4>@Html.DisplayNameFor(model => model.Time): @Html.DisplayFor(model => model.Time)</h4>
    </div>
    @foreach (var fComp in Model.FleetCompositions)
    {
        <div class="col-sm-3">
            @fComp.MemberName
        </div>
    }
</div>

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
