@model r3mus.ViewModels.FleetSummaryViewModel
@{
    ViewBag.Title = "Fleet Home";
}
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>
<div class="row">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Summary.First().Commander)</th>
            <th>@Html.DisplayNameFor(model => model.Summary.First().MonthCount)</th>
            <th>@Html.DisplayNameFor(model => model.Summary.First().LastMonthCount)</th>
        </tr>

        @foreach (var vm in Model.Summary)
        {
            <tr>
                <td>
                    @Html.DisplayFor(cmdr => vm.Commander)
                </td>
                <td>
                    @Html.DisplayFor(cmdr => vm.MonthCount)
                </td>
                <td>
                    @Html.DisplayFor(cmdr => vm.LastMonthCount)
                </td>
            </tr>
        }
    </table>
</div>
<div class="row">&nbsp;</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fleets.First().Commander)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fleets.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fleets.First().Time)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Fleets)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Commander)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            </td>
        </tr>
    }

</table>
